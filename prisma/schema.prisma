generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Enum for Swiss cantons if needed later â€” we default to Vaud (VD)
enum Canton {
    VD
}

model Location {
    id        String   @id @default(cuid())
    name      String?
    address   String?
    city      String?
    canton    Canton   @default(VD)
    latitude  Float?
    longitude Float?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    activities Activity[]

    @@unique([address], name: "unique_location_address")
    @@index([city])
}

model Activity {
    id          String    @id @default(cuid())
    name        String    @unique
    description String?
    category    String?
    subtitle    String? // Added subtitle field
    date        String?
    price       String?
    sourceUrl   String?
    startTime   DateTime?
    endTime     DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    // Relations
    locationId String
    location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

    @@index([startTime])
    @@index([locationId])
}
