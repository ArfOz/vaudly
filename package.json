{
  "name": "vaudly",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo powered by Turborepo for Expo + NestJS",
  "packageManager": "npm@11.3.0",
  "type": "commonjs",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "npm --workspace apps/backend run start:dev",
    "dev:mobile": "npm --workspace apps/mobile start"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "devDependencies": {
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  }
}
