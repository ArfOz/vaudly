generator client {
    provider = "prisma-client-js"
    output   = "../../../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Enum for Swiss cantons if needed later â€” we default to Vaud (VD)
enum Canton {
    VD
}

model ScraperConfig {
    id          String    @id @default(cuid())
    url         String    @unique
    name        String
    // store scraper type as name + code in the database (no enum)
    typeName    String
    typeCode    String
    isActive    Boolean   @default(true)
    lastScraped DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    // Optional JSON config for custom selectors
    selectors Json?

    @@index([isActive])
    @@index([typeCode])
}

model Location {
    id        String   @id @default(cuid())
    name      String?
    address   String?
    city      String?
    canton    Canton   @default(VD)
    latitude  Float?
    longitude Float?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    activities Activity[]

    @@unique([address], name: "unique_location_address")
    @@index([city])
}

model Activity {
    id          String    @id @default(cuid())
    name        String    @unique
    description String?
    category    String?
    subtitle    String?
    date        String?
    price       String?
    startTime   DateTime?
    endTime     DateTime?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    // Relations
    locationId String
    location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

    @@index([startTime])
    @@index([locationId])
}
