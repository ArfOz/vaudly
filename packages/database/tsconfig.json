{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@vaudly/shared": ["../shared/src"],
      "@vaudly/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "prisma/generated"]
}
