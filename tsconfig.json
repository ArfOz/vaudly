{
  "compilerOptions": {
    "target": "ES2023",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "database/*": ["packages/database/*"],
      "database": ["packages/database/index.ts"],
      "shared": ["packages/shared/src/index.ts"],
      "shared/*": ["packages/shared/src/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
